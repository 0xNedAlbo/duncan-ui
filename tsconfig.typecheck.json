{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "noEmit": true,
        "module": "NodeNext",
        "moduleResolution": "nodenext",
        "skipLibCheck": true,
        "types": [
            "node"
        ],
        "lib": [
            "ES2022",
            "DOM"
        ]
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        ".next",
        "dist",
        "build",
        "coverage",
        "src/workers/**/dist"
    ]
}