{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020", "DOM"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["../../*"],
      "@prisma/client": ["../../../node_modules/@prisma/client"]
    }
  },
  "include": [
    "src/**/*",
    "../../lib/**/*",
    "../../config/**/*",
    "../../services/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
